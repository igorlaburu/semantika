# Variables de Entorno para EasyPanel
# Copia estas variables en EasyPanel → Environment Variables

# ==============================================
# SUPABASE (Requerido)
# ==============================================
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_KEY=tu-supabase-service-role-key-aqui

# ==============================================
# QDRANT CLOUD (Requerido)
# ==============================================
QDRANT_URL=https://xxxxx.aws.cloud.qdrant.io:6333
QDRANT_API_KEY=tu-qdrant-api-key-aqui
QDRANT_COLLECTION_NAME=semantika_prod

# ==============================================
# OPENROUTER (Requerido)
# ==============================================
OPENROUTER_API_KEY=sk-or-v1-tu-clave-aqui
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_FAST_MODEL=openai/gpt-4o-mini

# ==============================================
# SCRAPERTECH (Opcional - para Twitter)
# ==============================================
SCRAPERTECH_API_KEY=
SCRAPERTECH_BASE_URL=https://api.scraper.tech

# ==============================================
# CONFIGURACIÓN DE PROCESAMIENTO
# ==============================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SIMILARITY_THRESHOLD=0.98
DATA_TTL_DAYS=30

# ==============================================
# SERVIDOR
# ==============================================
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# ==============================================
# FILE MONITOR (Opcional)
# ==============================================
FILE_MONITOR_ENABLED=false
FILE_MONITOR_WATCH_DIR=/app/data/watch
FILE_MONITOR_PROCESSED_DIR=/app/data/processed
FILE_MONITOR_INTERVAL=30

# ==============================================
# EMAIL MONITOR (Opcional)
# ==============================================
EMAIL_MONITOR_ENABLED=false
EMAIL_IMAP_SERVER=
EMAIL_IMAP_PORT=993
EMAIL_ADDRESS=
EMAIL_PASSWORD=
EMAIL_MONITOR_INTERVAL=60
