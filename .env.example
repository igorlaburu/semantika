# Supabase Configuration
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_KEY=tu-supabase-service-role-key

# Qdrant Configuration (Cloud or local)
QDRANT_URL=https://your-cluster.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=semantika_prod

# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-v1-tu-clave-aqui
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_FAST_MODEL=openai/gpt-4o-mini

# Scraper.tech Configuration (Twitter scraping)
SCRAPERTECH_API_KEY=tu-clave-scrapertech-aqui
SCRAPERTECH_BASE_URL=https://api.scraper.tech

# Perplexity Configuration (News fetching)
PERPLEXITY_API_KEY=pplx-tu-clave-aqui

# Text Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SIMILARITY_THRESHOLD=0.98

# TTL Configuration (days)
DATA_TTL_DAYS=30

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# File Monitor Configuration
FILE_MONITOR_ENABLED=false
FILE_MONITOR_WATCH_DIR=/app/data/watch
FILE_MONITOR_PROCESSED_DIR=/app/data/processed
FILE_MONITOR_INTERVAL=30

# Email Monitor Configuration
EMAIL_MONITOR_ENABLED=false
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_ADDRESS=your-email@example.com
EMAIL_PASSWORD=your-app-password
EMAIL_MONITOR_INTERVAL=60

# TTS Service Configuration (Piper TTS)
# Internal service URL (for inter-service communication within Docker network)
TTS_SERVICE_URL=http://semantika-tts:5000
# External URL (for frontend/Kazet) - exposed via api.ekimen.ai reverse proxy
TTS_EXTERNAL_URL=https://api.ekimen.ai/tts
